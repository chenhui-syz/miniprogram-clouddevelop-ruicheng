<!--pages/addlog/addlog.wxml-->
<view class="header">
	<h4 class="weui-form__title">新建日程</h4>
</view>
<view class="weui-form__control-area">
	<view class="weui-cells__group weui-cells__group_form">
		<view class="weui-cells__title">当前日期为：{{currentdate}}</view>
		<view class="weui-cells__title">日程内容</view>
		<view class="weui-cells weui-cells_form">
			<view class="weui-cell ">
				<view class="weui-cell__bd">
					<textarea class="weui-textarea" placeholder="请输入日程内容" rows="3" bindinput="getContent"></textarea>
					<!-- <view class="weui-textarea-counter"><span>0</span>/200</view> -->
				</view>
			</view>
		</view>
	</view>
</view>
<view class="weui-form__opr-area">
	<a class="weui-btn weui-btn_primary" bindtap="addNewLog">新建</a>
</view>